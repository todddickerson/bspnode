# Database
DATABASE_URL="postgresql://user:password@localhost:5432/bspnode"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secret-key-here"

# Mux (Get from https://dashboard.mux.com)
MUX_TOKEN_ID="your-mux-token-id"
MUX_TOKEN_SECRET="your-mux-token-secret"
MUX_WEBHOOK_SECRET="your-webhook-secret"
MUX_TEST_MODE="false"  # Set to "true" to enable test mode watermark

# Socket.io
NEXT_PUBLIC_SOCKET_URL="http://localhost:3000"

# LiveKit (Required for browser-based and multi-host streaming)
# Get from https://cloud.livekit.io
LIVEKIT_API_KEY="your-livekit-api-key"
LIVEKIT_API_SECRET="your-livekit-api-secret"
NEXT_PUBLIC_LIVEKIT_URL="wss://your-livekit-url.livekit.cloud"

# Optional: Email (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Supabase (Optional - for real-time features)
NEXT_PUBLIC_SUPABASE_URL="your-project-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
